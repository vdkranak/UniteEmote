<UserControl x:Class="UnitePlugin.View.Controls.StatusViewControlView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:UnitePlugin.View"
             xmlns:viewModelControls="clr-namespace:UnitePlugin.ViewModel.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="40" d:DesignWidth="40">
    <!--<UserControl.DataContext>
        <viewModelControls:StatusViewControlViewModel />
    </UserControl.DataContext>-->

    <Button x:Name="ShowStatusImageButton" 
            BorderThickness="2" 
            FontWeight="Bold" 
            Foreground="#FC4C02" 
            FontSize="24" 
            Background="#76DAFF" 
            FontFamily="Arial" 
            Command="{Binding ShowStatusImageButton_ClickCommand}" 
            CommandParameter="{Binding}"
            Content="{Binding ButtonText}"
    />
</UserControl>
